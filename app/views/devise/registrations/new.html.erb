<div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-6 mt-10">
  <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
               html: { class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
                        class: "w-full px-3 py-2 border rounded shadow appearance-none" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <% if @minimum_password_length %>
        <em class="text-xs text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password",
                           class: "w-full px-3 py-2 border rounded shadow appearance-none" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
                           class: "w-full px-3 py-2 border rounded shadow appearance-none" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up",
                   class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>