<div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-6 mt-10">
  <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Log In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name),
               html: { class: "space-y-4" }) do |f| %>
    <div class="field">
      <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
                        class: "w-full px-3 py-2 border rounded shadow appearance-none" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password",
                           class: "w-full px-3 py-2 border rounded shadow appearance-none" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field flex items-center">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, class: "text-gray-700 text-sm" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in",
                   class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-4 text-center text-sm">
    <%= render "devise/shared/links" %>
  </div>
</div>