<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <div class="text-center mb-12">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">Про нас</h1>
      <p class="text-xl text-gray-600"><%= @mission %></p>
    </div>

    <div class="bg-white shadow-lg rounded-lg p-8 mb-12">
      <h2 class="text-2xl font-semibold text-gray-800 mb-6">Наша команда</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <% @team_members.each do |member| %>
          <div class="bg-blue-50 rounded-lg p-6 text-center">
            <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-xl font-bold text-blue-600"><%= member[:name][0] %></span>
            </div>
            <h3 class="font-medium text-gray-900"><%= member[:name] %></h3>
            <p class="text-blue-600"><%= member[:role] %></p>
          </div>
        <% end %>
      </div>
    </div>

    <div class="text-center">
      <%= link_to "Повернутись на головну", root_path,
                  class: "px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition" %>
    </div>
  </div>
</div>