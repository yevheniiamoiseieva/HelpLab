<% if current_user&.role == "volunteer" %>
  <!-- Volunteer Interface -->
  <div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 py-8 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-12 animate-fade-in">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl">
          <span class="block">Запити на допомогу</span>
          <span class="block text-blue-600">Допоможіть іншим</span>
        </h1>
        <p class="mt-5 max-w-xl mx-auto text-xl text-gray-500">
          Знайдіть запити на допомогу поблизу вас
        </p>
      </div>

      <!-- Advanced Filters -->
      <div class="mb-8 bg-white shadow-xl rounded-2xl p-6 backdrop-blur-sm bg-white/70 animate-fade-in-up animation-delay-100">
        <%= form_with url: root_path, method: :get, local: true, class: "space-y-4" do |f| %>
          <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <!-- Category Filter -->
            <div>
              <label for="category" class="block text-sm font-medium text-gray-700 mb-1">Категорія</label>
              <%= select_tag :category,
                             options_for_select(
                               [['Всі категорії', '']] + Request::CATEGORIES.map { |c| [c, c] },
                               selected: params[:category]
                             ),
                             class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-xl" %>
            </div>

            <!-- Status Filter -->
            <div>
              <label for="status" class="block text-sm font-medium text-gray-700 mb-1">Статус</label>
              <%= select_tag :status,
                             options_for_select(
                               [['Всі статуси', '']] + Request::STATUSES.map { |s| [s, s] },
                               selected: params[:status]
                             ),
                             class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-xl" %>
            </div>

            <!-- Location Filter -->
            <div>
              <label for="location" class="block text-sm font-medium text-gray-700 mb-1">Місце</label>
              <input type="text" name="location" id="location" value="<%= params[:location] %>"
                     placeholder="Введіть місце"
                     class="mt-1 block w-full pl-3 pr-10 py-2 text-base border border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-xl">
            </div>

            <!-- Sort Options -->
            <div>
              <label for="sort" class="block text-sm font-medium text-gray-700 mb-1">Сортування</label>
              <%= select_tag :sort,
                             options_for_select([
                                                  ['Нові спочатку', 'newest'],
                                                  ['Старі спочатку', 'oldest'],
                                                  ['Більше відгуків', 'most_responses'],
                                                  ['Менше відгуків', 'least_responses']
                                                ], selected: params[:sort]),
                             class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-xl" %>
            </div>
          </div>

          <!-- Search and Submit -->
          <div class="flex flex-col sm:flex-row gap-4 pt-2">
            <div class="flex-grow relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                </svg>
              </div>
              <input type="text" name="search" id="search" value="<%= params[:search] %>"
                     placeholder="Пошук за запитами..."
                     class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-xl focus:outline-none focus:ring-blue-500 focus:border-blue-500">
            </div>

            <div class="flex space-x-3">
              <button type="submit"
                      class="px-6 py-3 bg-gradient-to-r from-blue-500 to-blue-600 text-white font-medium rounded-xl shadow-lg hover:shadow-xl hover:from-blue-600 hover:to-blue-700 transition-all duration-300 transform hover:-translate-y-1 flex items-center">
                <span>Застосувати</span>
                <svg class="ml-2 -mr-1 w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                </svg>
              </button>

              <%= link_to root_path,
                          class: "px-6 py-3 bg-gray-200 text-gray-700 font-medium rounded-xl shadow-lg hover:shadow-xl hover:bg-gray-300 transition-all duration-300 transform hover:-translate-y-1 flex items-center" do %>
                <span>Скинути</span>
                <svg class="ml-2 -mr-1 w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Requests List -->
      <% if @requests.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @requests.each_with_index do |request, index| %>
            <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow duration-300 transform hover:-translate-y-2 animate-fade-in-up animation-delay-<%= index * 100 %>">
              <div class="p-6">
                <!-- Request Header -->
                <div class="flex items-center mb-4">
                  <div class="flex-shrink-0 bg-blue-500 rounded-full w-10 h-10 flex items-center justify-center text-white font-bold">
                    <%= request.user.profile&.first_name&.first&.upcase || '?' %>
                  </div>
                  <div class="ml-4">
                    <p class="text-sm font-medium text-gray-900">
                      <%= request.user.profile&.first_name || 'Користувач' %>
                      <% if request.user.role.present? %>
                        <span class="text-blue-600">• <%= request.user.role %></span>
                      <% end %>
                    </p>
                    <p class="text-xs text-gray-500"><%= time_ago_in_words(request.created_at) %> тому</p>
                  </div>
                </div>

                <!-- Request Content -->
                <h3 class="text-xl font-semibold text-gray-900 mb-2"><%= request.title %></h3>
                <p class="text-gray-600 mb-4 line-clamp-3"><%= request.description %></p>

                <!-- Tags -->
                <div class="flex flex-wrap gap-2 mb-4">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    <%= request.category %>
                  </span>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <%= request.location %>
                  </span>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium <%= status_color(request.status) %>">
                    <%= request.status %>
                  </span>
                </div>

                <!-- Responses Count -->
                <div class="flex items-center text-sm text-gray-500 mb-4">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                  </svg>
                  <span><%= request.responses_count %> відгуків</span>
                </div>

                <!-- Action Button -->
                <%= link_to 'Деталі →', request_path(request),
                            class: 'inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-colors duration-200' %>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Pagination -->
        <% if @requests.respond_to?(:total_pages) %>
          <div class="mt-8 flex justify-center">
            <%= paginate @requests %>
          </div>
        <% end %>
      <% else %>
        <!-- Empty State -->
        <div class="text-center py-12">
          <div class="mx-auto h-24 w-24 text-gray-400 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-medium text-gray-900">Немає доступних запитів</h3>
          <p class="mt-1 text-sm text-gray-500">Наразі немає активних запитів на допомогу за вашими критеріями.</p>
          <%= link_to "Скинути фільтри", root_path,
                      class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>
<% elsif user_signed_in? %>
  <!-- Regular User Interface -->
  <div class="min-h-screen bg-gray-50">
    <!-- Personal panel with animated background -->
    <div class="bg-indigo-700 text-white pb-20 pt-8 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
      <!-- Animated background elements -->
      <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-indigo-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob"></div>
        <div class="absolute top-1/2 right-1/4 w-64 h-64 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob animation-delay-2000"></div>
      </div>

      <div class="relative max-w-7xl mx-auto">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-end">
          <div class="animate-fade-in">
            <h1 class="text-3xl font-bold">
              Good day, <span class="text-indigo-200"><%= current_user.profile.first_name %></span>!
            </h1>
            <p class="text-indigo-100 mt-2">Your personal assistant in finding help</p>
          </div>
          <div class="mt-6 md:mt-0 flex items-center space-x-3">
            <%= link_to "Create request", new_request_path,
                        class: "bg-white text-indigo-700 px-6 py-2 rounded-full font-medium hover:bg-gray-100 transition flex items-center" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Main content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 -mt-12">
      <!-- Quick access cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <!-- Emergency help card -->
        <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition animate-fade-in-up animation-delay-100">
          <div class="p-6">
            <div class="flex items-center mb-4">
              <div class="bg-indigo-100 p-3 rounded-lg mr-4">
                <i data-lucide="alert-circle" class="w-6 h-6 text-indigo-600"></i>
              </div>
              <h3 class="text-lg font-medium">Emergency help</h3>
            </div>
            <p class="text-gray-600 mb-4">Click to create an urgent help request</p>
            <%= link_to "Request help", new_request_path(urgent: true),
                        class: "text-indigo-600 hover:text-indigo-800 font-medium flex items-center" %>
          </div>
        </div>

        <!-- Messages card -->
        <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition animate-fade-in-up animation-delay-200">
          <div class="p-6">
            <div class="flex items-center mb-4">
              <div class="bg-green-100 p-3 rounded-lg mr-4">
                <i data-lucide="message-square" class="w-6 h-6 text-green-600"></i>
              </div>
              <h3 class="text-lg font-medium">My conversations</h3>
            </div>
            <p class="text-gray-600 mb-4">Communication with volunteers who responded</p>
            <% active_requests = @user_requests&.select { |r| r.status != 'Completed' && r.responses.any? } || [] %>
            <% if active_requests.any? %>
              <%= link_to "Open chat", request_messages_path(active_requests.first),
                          class: "text-green-600 hover:text-green-800 font-medium flex items-center" %>
            <% else %>
              <span class="text-gray-500">No active chats</span>
            <% end %>
          </div>
        </div>

        <!-- Resources card -->
        <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition animate-fade-in-up animation-delay-300">
          <div class="p-6">
            <div class="flex items-center mb-4">
              <div class="bg-yellow-100 p-3 rounded-lg mr-4">
                <i data-lucide="lightbulb" class="w-6 h-6 text-yellow-600"></i>
              </div>
              <h3 class="text-lg font-medium">Useful resources</h3>
            </div>
            <p class="text-gray-600 mb-4">Official sources of information and help</p>
            <div class="space-y-2">
              <% @contacts.each do |contact| %>
                <a href="<%= contact %>" target="_blank" class="text-blue-600 hover:text-blue-800 text-sm flex items-center">
                  <i data-lucide="external-link" class="w-4 h-4 mr-2"></i>
                  <%= URI.parse(contact).host %>
                </a>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Help near you -->
      <div class="bg-white rounded-xl shadow-md overflow-hidden mb-8 animate-fade-in-up">
        <div class="p-6 border-b border-gray-100">
          <h2 class="text-xl font-semibold flex items-center">
            <i data-lucide="map" class="w-6 h-6 text-indigo-600 mr-3"></i>
            Help near you
          </h2>
        </div>
        <div class="p-6">
          <% if @volunteers.any? %>
            <div class="swiper-container h-64 bg-gray-100 rounded-lg"> <!-- Изменил h-96 на h-64 -->
              <div class="swiper-wrapper">
                <% @volunteers.each do |volunteer| %>
                  <div class="swiper-slide">
                    <div class="bg-white rounded-lg shadow-lg p-4 text-center h-full flex flex-col"> <!-- Добавил h-full и flex -->
                      <% avatar_url = volunteer[:avatar_url].presence || 'default-avatar.png' %>
                      <img src="<%= avatar_url %>" alt="<%= volunteer[:name] %>"
                           class="w-16 h-16 rounded-full mx-auto mb-2"> <!-- Уменьшил размер аватарки -->
                      <h3 class="text-md font-semibold"><%= volunteer[:name] %></h3> <!-- Уменьшил текст -->
                      <p class="text-sm text-gray-500 mb-2"><%= volunteer[:city] %></p> <!-- Уменьшил текст -->
                      <a href="<%= public_profile_path(volunteer[:id]) %>"
                         class="mt-auto px-3 py-1 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition text-sm">
                        View Profile
                      </a> <!-- Уменьшил кнопку -->
                    </div>
                  </div>
                <% end %>
              </div>
              <div class="swiper-button-next"></div>
              <div class="swiper-button-prev"></div>
            </div>
          <% else %>
            <div class="h-64 bg-gray-100 rounded-lg flex items-center justify-center"> <!-- Изменил h-96 на h-64 -->
              <div class="text-center">
                <i data-lucide="map-pin" class="w-8 h-8 text-indigo-400 mx-auto mb-2"></i> <!-- Уменьшил иконку -->
                <h3 class="text-md font-medium text-gray-900">No volunteers in your city</h3>
                <p class="text-sm text-gray-600 mt-1">Currently no volunteers available near you</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <script>
          // Инициализация Swiper после загрузки контента
          document.addEventListener('DOMContentLoaded', function() {
              var swiper = new Swiper('.swiper-container', {
                  slidesPerView: 1,
                  spaceBetween: 10,
                  navigation: {
                      nextEl: '.swiper-button-next',
                      prevEl: '.swiper-button-prev'
                  },
                  breakpoints: {
                      640: {
                          slidesPerView: 2,
                          spaceBetween: 20
                      },
                      768: {
                          slidesPerView: 3,
                          spaceBetween: 30
                      },
                      1024: {
                          slidesPerView: 4,
                          spaceBetween: 40
                      }
                  }
              });

              // Обновление Swiper после динамической загрузки контента
              swiper.update();
          });
      </script>


      <!-- Active requests -->
      <div class="mb-8">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-xl font-semibold">My active requests</h2>
          <%= link_to "All requests", requests_path, class: "text-indigo-600 hover:text-indigo-800" %>
        </div>

        <% if @user_requests.active.any? %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <% @user_requests.active.each do |request| %>
              <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition">
                <div class="p-6">
                  <div class="flex justify-between items-start">
                    <h3 class="text-lg font-medium"><%= request.title %></h3>
                    <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-full">
                      <%= request.status %>
                    </span>
                  </div>
                  <p class="text-gray-600 mt-2"><%= truncate(request.description, length: 100) %></p>

                  <div class="mt-4 flex flex-wrap gap-2">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                      <i data-lucide="tag" class="w-3 h-3 mr-1"></i>
                      <%= request.category %>
                    </span>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                      <i data-lucide="map-pin" class="w-3 h-3 mr-1"></i>
                      <%= request.location %>
                    </span>
                  </div>

                  <div class="mt-6 flex justify-between items-center">
                    <div class="flex items-center">
                      <i data-lucide="message-square" class="w-4 h-4 text-gray-400 mr-1"></i>
                      <span class="text-sm text-gray-500"><%= request.responses_count %> responses</span>
                    </div>
                    <%= link_to "Details", request_path(request),
                                class: "text-indigo-600 hover:text-indigo-800 font-medium flex items-center" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="bg-white rounded-xl shadow-md overflow-hidden text-center py-12">
            <div class="mx-auto h-16 w-16 text-gray-400 mb-4">
              <i data-lucide="inbox" class="w-full h-full"></i>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No active requests</h3>
            <p class="text-gray-600 mb-4">Create your first help request</p>
            <%= link_to "Create request", new_request_path,
                        class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition" %>
          </div>
        <% end %>
      </div>


      <div class="mb-8">
        <h2 class="text-xl font-semibold mb-4">Received help</h2>
        <div class="bg-white rounded-xl shadow-md overflow-hidden">
          <div class="p-6">
            <% if @completed_requests.any? %>
              <div class="space-y-6">
                <% @completed_requests.each do |request| %>
                  <% if request.responses.any? %>
                    <% volunteer = request.responses.first.user %>
                    <div class="flex items-start">
                      <% if volunteer.profile.avatar.attached? %>
                        <%= image_tag url_for(volunteer.profile.avatar), class: "w-12 h-12 rounded-full border-2 border-white shadow-sm mr-4" %>
                      <% else %>
                        <div class="w-12 h-12 rounded-full border-2 border-white shadow-sm mr-4 bg-gray-200 flex items-center justify-center text-gray-600">
                          <%= volunteer.profile.first_name[0].upcase %>
                        </div>
                      <% end %>
                      <div class="flex-1">
                        <div class="flex justify-between items-center">
                          <h3 class="font-medium"><%= volunteer.profile.first_name %></h3>
                          <span class="text-sm text-gray-500"><%= request.updated_at.strftime("%d.%m.%Y") %></span>
                        </div>
                        <p class="text-gray-600 mt-1">Help: <%= request.title %></p>


                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8">
                <div class="mx-auto h-16 w-16 text-gray-400 mb-4">
                  <i data-lucide="heart" class="w-full h-full"></i>
                </div>
                <h3 class="text-lg font-medium text-gray-900 mb-2">No help history yet</h3>
                <p class="text-gray-600">Here will be displayed all cases when you received help</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

<% else %>

  <div class="min-h-screen bg-gradient-to-br from-gray-900 to-blue-900 py-16 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
    <!-- Animated background elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-blue-400 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob"></div>
      <div class="absolute top-1/2 right-1/4 w-64 h-64 bg-purple-400 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob animation-delay-2000"></div>
      <div class="absolute bottom-1/4 left-1/2 w-64 h-64 bg-indigo-400 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob animation-delay-4000"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto">
      <div class="text-center mb-16 animate-fade-in">
        <h1 class="text-4xl font-extrabold text-white sm:text-5xl sm:tracking-tight lg:text-6xl">
          <span class="block">Help Nearby</span>
          <span class="block text-transparent bg-clip-text bg-gradient-to-r from-blue-300 to-purple-300">Ukraine</span>
        </h1>
        <p class="mt-5 max-w-xl mx-auto text-xl text-blue-100">
          Useful resources and information for those who need support
        </p>
      </div>


      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
        <!-- Block for those in need -->
        <div class="bg-white/10 backdrop-blur-md rounded-2xl p-8 shadow-xl border border-white/10 animate-fade-in-up">
          <div class="flex items-center mb-6">
            <div class="bg-blue-500/20 p-3 rounded-lg mr-4">
              <i data-lucide="hand-heart" class="w-8 h-8 text-blue-300"></i>
            </div>
            <h2 class="text-2xl font-bold text-white">Need help?</h2>
