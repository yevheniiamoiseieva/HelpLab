<div class="max-w-4xl mx-auto text-center py-16">
  <h1 class="text-4xl font-bold text-gray-800 mb-6">Welcome to Volunteers App</h1>
  <p class="text-xl text-gray-600 mb-8">Join our community and make a difference!</p>

  <div class="flex justify-center space-x-4">
    <% if user_signed_in? %>
      <%= link_to "My Profile", profile_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg text-lg transition" %>
    <% else %>
      <%= link_to "Sign Up", new_user_registration_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg text-lg transition" %>
      <%= link_to "Sign In", new_user_session_path, class: "bg-white hover:bg-gray-100 text-blue-600 font-bold py-3 px-6 border border-blue-600 rounded-lg text-lg transition" %>
    <% end %>
  </div>
</div>