<!DOCTYPE html>
<html>
<head>
  <title><%= content_for(:title) || "Volunteers App" %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <link href="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css" rel="stylesheet">

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= yield :head %>

  <link rel="manifest" href="/manifest.json">
  <link rel="icon" href="/icon.png" type="image/png">
  <link rel="icon" href="/icon.svg" type="image/svg+xml">
  <link rel="apple-touch-icon" href="/icon.png">
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100">
<nav class="bg-blue-700 text-white p-4 shadow-md">
  <div class="container mx-auto flex justify-between items-center">
    <%= link_to "Volunteers App", root_path, class: "text-xl font-bold hover:text-blue-200 transition-colors" %>
    <div class="flex space-x-4 items-center">
      <% if user_signed_in? %>
        <% unread_count = current_user.notifications.where(read: false).count %>

        <!-- Notifications -->
        <div class="relative" data-controller="notifications">
          <%= link_to notifications_path, class: "hover:text-gray-200 transition-colors" do %>
            <i data-lucide="bell" class="w-6 h-6"></i>
          <% end %>
          <% if unread_count > 0 %>
            <span class="absolute -top-1 -right-1 bg-red-600 text-white text-xs rounded-full px-1.5 animate-pulse">
              <%= unread_count %>
            </span>
          <% end %>
        </div>

        <!-- Home Icon -->
        <%= link_to root_path, class: "hover:text-gray-200 flex items-center space-x-1 transition-colors" do %>
          <i data-lucide="home" class="w-5 h-5"></i>
        <% end %>

        <!-- Requests (only for non-volunteers) -->
        <% unless current_user.role == "volunteer" %>
          <%= link_to requests_path, class: "hover:text-gray-200 flex items-center space-x-1 transition-colors" do %>
            <i data-lucide="inbox" class="w-5 h-5"></i>
            <span>Запити</span>
          <% end %>
        <% end %>

        <!-- Profile Avatar -->
        <%= link_to profile_path, class: "hover:text-gray-200 flex items-center space-x-2 transition-colors" do %>
          <img src="<%= current_user.profile.avatar.attached? ? url_for(current_user.profile.avatar) : 'https://via.placeholder.com/32' %>"
               alt="Аватар"
               class="w-8 h-8 rounded-full border-2 border-white hover:border-blue-300 transition-all" />
        <% end %>

        <!-- Sign Out -->
        <%= button_to "Вийти", destroy_user_session_path, method: :delete,
                      class: "bg-white text-blue-700 px-4 py-2 rounded hover:bg-gray-100 transition-all hover:shadow-md" %>

      <% else %>
        <%= link_to "Увійти", new_user_session_path,
                    class: "bg-white text-blue-700 px-4 py-2 rounded hover:bg-gray-100 transition-all hover:shadow-md" %>
        <%= link_to "Зареєструватися", new_user_registration_path,
                    class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700 transition-all hover:shadow-md" %>
      <% end %>
    </div>
  </div>
</nav>

<main class="container mx-auto p-4">
  <% if notice %>
    <p class="bg-green-100 text-green-800 p-3 rounded mb-4 animate-fade-in"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="bg-red-100 text-red-800 p-3 rounded mb-4 animate-fade-in"><%= alert %></p>
  <% end %>

  <%= yield %>
</main>

<script src="https://unpkg.com/lucide@latest"></script>
<%= javascript_importmap_tags %>
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<script>

    document.addEventListener('turbo:load', function() {
        if (window.lucide) {
            lucide.createIcons();
        }
    });

    document.addEventListener('DOMContentLoaded', function() {
        if (window.lucide) {
            lucide.createIcons();
        }
    });
</script>
</body>
</html>