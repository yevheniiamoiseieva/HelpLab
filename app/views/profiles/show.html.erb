<div class="max-w-3xl mx-auto bg-white rounded-xl shadow-md overflow-hidden mt-10">
  <div class="bg-gradient-to-r from-blue-600 to-blue-500 px-6 py-4">
    <h2 class="text-2xl font-bold text-white">Мій профіль</h2>
  </div>

  <div class="px-6 py-8">
    <div class="flex flex-col md:flex-row items-center md:items-start space-y-6 md:space-y-0 md:space-x-8">
      <div class="relative">
        <%= image_tag(@profile.avatar.attached? ? url_for(@profile.avatar) : "default-avatar.png",
                      class: "rounded-full h-40 w-40 object-cover border-4 border-white shadow-xl") %>
      </div>

      <div class="flex-1 space-y-4">
        <div>
          <h3 class="text-2xl font-semibold text-gray-800"><%= @profile.full_name %></h3>
          <p class="text-gray-600"><%= @profile.user.email %></p>
          <p class="text-sm text-gray-500 mt-2">Роль: <%= @profile.user.role.presence || "Не вказано" %></p>
        </div>

        <% if @profile.country.present? || @profile.city.present? %>
          <div class="flex items-center text-gray-700">
            <span><%= [@profile.country, @profile.city].compact.join(', ') %></span>
          </div>
        <% end %>

        <% if @profile.bio.present? %>
          <div class="pt-2">
            <h4 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-1">Про мене</h4>
            <p class="text-gray-700"><%= @profile.bio %></p>
          </div>
        <% end %>

        <% if @profile.user.role == User::ROLES["Волонтер"] %>
          <div class="mt-4 text-center">
            <div class="text-yellow-500 text-2xl">
              <% rounded = @profile.user.average_rating.round %>
              <%= "⭐" * rounded %><%= "☆" * (5 - rounded) %>
            </div>
            <p class="text-sm text-gray-600">
              Рейтинг: <%= @profile.user.average_rating.round(1) %> із 5 (<%= @profile.user.reviews.count %> відгуків)
            </p>
          </div>

          <% if current_user != @profile.user && @can_review && !@already_reviewed %>
            <%= form_with model: [@profile.user, Review.new], local: true, html: { class: "mt-4", data: { controller: "rating" } } do |f| %>
              <div class="flex items-center justify-center space-x-1 mb-2">
                <% 5.times do |i| %>
                  <span data-rating-target="star" data-action="click->rating#select" data-value="<%= i + 1 %>" class="text-3xl text-yellow-500 cursor-pointer">☆</span>
                <% end %>
              </div>

              <%= f.hidden_field :rating, value: 0, data: { rating_target: "input" } %>
              <%= f.text_area :comment, rows: 2, placeholder: "Ваш коментар...", class: "w-full p-2 border rounded mb-2" %>
              <%= f.submit "Надіслати відгук", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="flex justify-end space-x-4 mt-8">
      <%= link_to "На дашборд", dashboard_path,
                  class: "px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition" %>

      <% if current_user == @profile.user %>
        <%= link_to "Редагувати", edit_profile_path,
                    class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition" %>
      <% end %>
    </div>
  </div>
</div>
