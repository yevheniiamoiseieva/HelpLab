<div class="max-w-3xl mx-auto bg-white rounded-xl shadow-md overflow-hidden mt-10">
  <div class="bg-gradient-to-r from-blue-600 to-blue-500 px-6 py-4">
    <h2 class="text-2xl font-bold text-white">My Profile</h2>
  </div>

  <div class="px-6 py-8">
    <div class="flex flex-col md:flex-row items-center md:items-start space-y-6 md:space-y-0 md:space-x-8">
      <div class="relative">
        <% if @profile.avatar.attached? %>
          <%= image_tag @profile.avatar,
                        class: "rounded-full h-40 w-40 object-cover border-4 border-white shadow-xl" %>
        <% else %>
          <div class="rounded-full h-40 w-40 bg-gradient-to-br from-gray-200 to-gray-300 flex items-center justify-center border-4 border-white shadow-xl">
            <span class="text-gray-500">No photo</span>
          </div>
        <% end %>
      </div>

      <div class="flex-1 space-y-4">
        <div>
          <h3 class="text-2xl font-semibold text-gray-800">
            <%= @profile.first_name %> <%= @profile.last_name %>
          </h3>
          <p class="text-gray-600"><%= current_user.email %></p>
        </div>

        <% if @profile.country.present? || @profile.city.present? %>
          <div class="flex items-center text-gray-700">
            <svg class="w-5 h-5 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span>
              <%= [@profile.country, @profile.city].compact.join(', ') %>
            </span>
          </div>
        <% end %>

        <% if @profile.bio.present? %>
          <div class="pt-2">
            <h4 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-1">About</h4>
            <p class="text-gray-700"><%= @profile.bio %></p>
          </div>
        <% end %>
      </div>
    </div>

    <div class="flex justify-end space-x-4 mt-8">
      <%= link_to "Back to Dashboard", dashboard_path,
                  class: "px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition" %>
      <%= link_to "Edit Profile", edit_profile_path,
                  class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition" %>
    </div>
  </div>
</div>